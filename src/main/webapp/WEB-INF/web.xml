<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="false">

    <display-name>crm</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.dcm.crm.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.dcm.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>

    </filter-mapping>


    <listener>
        <listener-class>com.dcm.crm.web.listener.SysInitListener</listener-class>

    </listener>




    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>com.dcm.crm.settings.web.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>activityController</servlet-name>
        <servlet-class>com.dcm.crm.workbench.web.controller.ActivityController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>activityController</servlet-name>
        <url-pattern>/workbench/activity/getUserList.do</url-pattern>
        <url-pattern>/workbench/activity/saveActivity.do</url-pattern>
        <url-pattern>/workbench/activity/pageList.do</url-pattern>
        <url-pattern>/workbench/activity/deleteActivity.do</url-pattern>
        <url-pattern>/workbench/activity/getActivity.do</url-pattern>
        <url-pattern>/workbench/activity/updateActivity.do</url-pattern>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
        <url-pattern>/workbench/activity/getRemark.do</url-pattern>
        <url-pattern>/workbench/activity/removeRemark.do</url-pattern>
        <url-pattern>/workbench/activity/saveRemark.do</url-pattern>
        <url-pattern>/workbench/activity/updateRemark.do</url-pattern>
        <url-pattern>/workbench/activity/getUserListAndActivity.do</url-pattern>

    </servlet-mapping>

    <servlet>
        <servlet-name>clueController</servlet-name>
        <servlet-class>com.dcm.crm.workbench.web.controller.ClueController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>clueController</servlet-name>
        <url-pattern>/workbench/clue/getUserList.do</url-pattern>
        <url-pattern>/workbench/clue/saveClue.do</url-pattern>
        <url-pattern>/workbench/clue/pageList.do</url-pattern>
        <url-pattern>/workbench/clue/detail.do</url-pattern>
        <url-pattern>/workbench/clue/getClue.do</url-pattern>
        <url-pattern>/workbench/clue/updateClue.do</url-pattern>
        <url-pattern>/workbench/clue/deleteClue.do</url-pattern>
        <url-pattern>/workbench/clue/showClueRemark.do</url-pattern>
        <url-pattern>/workbench/clue/showRelativeActivity.do</url-pattern>
        <url-pattern>/workbench/clue/unbund.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityByName.do</url-pattern>
        <url-pattern>/workbench/clue/bund.do</url-pattern>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
        <url-pattern>/workbench/clue/addRemark.do</url-pattern>
        <url-pattern>/workbench/clue/xxx.do</url-pattern>

    </servlet-mapping>

    <servlet>
        <servlet-name>tranController</servlet-name>
        <servlet-class>com.dcm.crm.workbench.web.controller.TranController</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>tranController</servlet-name>
    <url-pattern>/workbench/transaction/add.do</url-pattern>
    <url-pattern>/workbench/transaction/save.do</url-pattern>
    <url-pattern>/workbench/transaction/getCustomerName.do</url-pattern>
    <url-pattern>/workbench/transaction/getActivity.do</url-pattern>
    <url-pattern>/workbench/transaction/getContacts.do</url-pattern>
    <url-pattern>/workbench/transaction/pageList.do</url-pattern>
    <url-pattern>/workbench/transaction/detail.do</url-pattern>
    <url-pattern>/workbench/transaction/showHistory.do</url-pattern>
    <url-pattern>/workbench/transaction/edit.do</url-pattern>
    <url-pattern>/workbench/transaction/changeStage.do</url-pattern>
    <url-pattern>/workbench/transaction/getCharts.do</url-pattern>
    </servlet-mapping>





</web-app>